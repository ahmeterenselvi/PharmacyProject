@model CreateDrugTipDto

@{
    ViewData["Title"] = "AddDrugTip";
    Layout = "~/Areas/Admin/Views/Admin/Index.cshtml";
}

<form asp-controller="AdminDrugTip" asp-action="AddDrugTip" method="post" class="form-group form-horizontal">
    <div class="form-group row">
        <label for="Title" class="col-sm-2 col-form-label">Uyarı Başlığı:</label>
        <input type="text" class="form-control col-sm-10" asp-for="Title">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group row">
        <label for="Summary" class="col-sm-2 col-form-label">Uyarı Açıklaması:</label>
        <input type="text" class="form-control col-sm-10" asp-for="Description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group row">
        <label for="Image" class="col-sm-2 col-form-label">Uyarı Resmi:</label>
        <input type="text" class="form-control col-sm-10" asp-for="Image">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Ekle</button>
</form>

<a href="~/Admin/AdminDrugTip/Index" class="btn btn-outline-primary">Geri</a>


