@model DrugTipResultDto

@{
    ViewData["Title"] = "DrugTipDetails";
    Layout = "~/Areas/Admin/Views/Admin/Index.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Uyarı Detayları</h4>
            <div class="table-responsive">
                <table class="table">
                    <tr>
                        <th>Uyarı Başlığı:</th>
                        <td>@Model.Title</td>
                    </tr>
                    <tr>
                        <th>Uyarı Açıklaması:</th>
                        <td>@Model.Description</td>
                    </tr>
                    <tr>
                        <th>Uyarı Resmi:</th>
                        <td>@Model.Image</td>
                    </tr>
                    <tr>
                        <th>Geri</th>
                        <td><a href="~/Admin/AdminDrugTip/Index" class="btn btn-outline-primary">Geri</a></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>


