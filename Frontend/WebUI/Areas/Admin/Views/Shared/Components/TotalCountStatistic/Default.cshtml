@model Dictionary<string,int>

<div class="row">
    <div class="col-lg-3 col-sm-6">
        <div class="card gradient-1">
            <div class="card-body">
                <h3 class="card-title text-white">Eczane Sayısı</h3>
                <div class="d-inline-block">
                    <h2 class="text-white">@Model["Pharmacy"]</h2>
                    <p class="text-white mb-0">@DateTime.Now.ToString("MMMM yyyy")</p>
                </div>
                <span class="float-right display-5 opacity-5"><i class="fas fa-medkit"></i></span>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-sm-6">
        <div class="card gradient-2">
            <div class="card-body">
                <h3 class="card-title text-white">Duyuru Sayısı</h3>
                <div class="d-inline-block">
                    <h2 class="text-white">@Model["Announcement"]</h2>
                    <p class="text-white mb-0">@DateTime.Now.ToString("MMMM yyyy")</p>
                </div>
                <span class="float-right display-5 opacity-5"><i class="fas fa-bullhorn"></i></span>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-sm-6">
        <div class="card gradient-3">
            <div class="card-body">
                <h3 class="card-title text-white">Geri Dönüş Sayısı</h3>
                <div class="d-inline-block">
                    <h2 class="text-white">@Model["Feedback"]</h2>
                    <p class="text-white mb-0">@DateTime.Now.ToString("MMMM yyyy")</p>
                </div>
                <span class="float-right display-5 opacity-5"><i class="fas fa-comments"></i></span>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-sm-6">
        <div class="card gradient-4">
            <div class="card-body">
                <h3 class="card-title text-white">Abone Sayısı</h3>
                <div class="d-inline-block">
                    <h2 class="text-white">@Model["Subscribe"]</h2>
                    <p class="text-white mb-0">@DateTime.Now.ToString("MMMM yyyy")</p>
                </div>
                <span class="float-right display-5 opacity-5"><i class="fas fa-heart"></i></span>
            </div>
        </div>
    </div>
</div>