@model List<PharmacyFeedbackResultDto>

@{
    ViewData["Title"] = "PharmacyFeedbacks";
    Layout = "~/Areas/Admin/Views/Admin/Index.cshtml";
    var pharmacyName = Model.FirstOrDefault().Name;
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<style>
    /* Stil ayarları */
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
    }

    .table-responsive {
        border-radius: 15px;
        overflow: hidden;
    }

    .table {
        background-color: #fff;
        border-collapse: collapse;
        width: 100%;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        border-radius: 15px;
        overflow: hidden;
    }

        .table th,
        .table td {
            padding: 20px;
            text-align: center;
        }

        .table thead th {
            background-color: #4CAF50;
            color: white;
            border-color: #4CAF50;
        }

        .table tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .table tbody tr:hover {
            background-color: #e9ecef;
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f5f5f5;
    }

    h1 {
        color: #4CAF50;
        text-transform: uppercase;
        font-weight: bold;
        font-size: 40px;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }

    .fa-sort {
        color: #4CAF50;
        transition: color 0.3s;
    }

        .fa-sort:hover {
            color: #388e3c;
        }
</style>

<h1 class="text-center">@pharmacyName Geri Dönüşleri</h1>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col"># <i class="fas fa-sort"></i></th>
                <th scope="col">Eczane İsmi <i class="fas fa-sort"></i></th>
                <th scope="col">Şehir <i class="fas fa-sort"></i></th>
                <th scope="col">İlçe <i class="fas fa-sort"></i></th>
                <th scope="col">Gönderen Mail <i class="fas fa-sort"></i></th>
                <th scope="col">Konu <i class="fas fa-sort"></i></th>
                <th scope="col">İçerik <i class="fas fa-sort"></i></th>
                <th scope="col">Puan <i class="fas fa-sort"></i></th>
                <th scope="col">Tarih <i class="fas fa-sort"></i></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var feedback in Model)
            {
                <tr>
                    <th scope="row">@feedback.PharmacyId</th>
                    <td>@feedback.Name</td>
                    <td>@feedback.City</td>
                    <td>@feedback.District</td>
                    <td>@feedback.SenderMail</td>
                    <td>@feedback.Topic</td>
                    <td>@feedback.Content</td>
                    <td>@feedback.Rating</td>
                    <td>@feedback.Date</td>
                </tr>
            }
        </tbody>
    </table>
</div>
