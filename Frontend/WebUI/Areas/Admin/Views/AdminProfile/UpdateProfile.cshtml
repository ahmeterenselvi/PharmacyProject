@model UpdateUserDto

@{
    ViewData["Title"] = "UpdateProfile";
    Layout = "~/Areas/Admin/Views/Admin/Index.cshtml";
}

<form asp-controller="AdminProfile" asp-action="UpdateProfile" method="post" class="form-group form-horizontal">
    <div class="form-group row">
        <label for="Name" class="col-sm-2 col-form-label">Ad:</label>
        <input type="text" class="form-control col-sm-10" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group row">
        <label for="Surname" class="col-sm-2 col-form-label">Soyad:</label>
        <input type="text" class="form-control col-sm-10" asp-for="Surname">
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label for="PhoneNumber" class="col-sm-2 col-form-label">Telefon Numarası:</label>
        <input type="text" class="form-control col-sm-10" asp-for="PhoneNumber">
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label for="City" class="col-sm-2 col-form-label">Şehir:</label>
        <input type="text" class="form-control col-sm-10" asp-for="City">
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label for="District" class="col-sm-2 col-form-label">İlçe:</label>
        <input type="text" class="form-control col-sm-10" asp-for="District">
        <span asp-validation-for="District" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label for="Password" class="col-sm-2 col-form-label">Şifre:</label>
        <input type="text" class="form-control col-sm-10" asp-for="Password">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group row">
        <label for="ConfirmPassword" class="col-sm-2 col-form-label">Şifreyi Onayla:</label>
        <input type="text" class="form-control col-sm-10" asp-for="ConfirmPassword">
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>

<a href="~/Admin/AdminProfile/Index" class="btn btn-outline-primary">Geri</a>