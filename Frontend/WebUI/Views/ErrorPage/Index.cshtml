@{
    Layout = null;
}

<!DOCTYPE html>
<html class="h-100" lang="tr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Eczanematik</title>
    <link rel="icon" type="image/png" sizes="16x16" href="~/adminweb/images/favicon.png">
    <link href="~/adminweb/css/style.css" rel="stylesheet">
</head>

<body class="h-100">
    <div id="preloader">
        <div class="loader">
            <svg class="circular" viewBox="25 25 50 50">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="3" stroke-miterlimit="10" />
            </svg>
        </div>
    </div>

    <div class="login-form-bg h-100">
        <div class="container h-100">
            <div class="row justify-content-center align-items-center h-100">
                <div class="col-xl-6">
                    <div class="error-content">
                        <div class="card mb-0">
                            <div class="card-body text-center">
                                <h1 class="error-text text-primary">403</h1>
                                <h4 class="mt-4"><i class="fa fa-thumbs-down text-danger"></i>Yetkisiz Erişim</h4>
                                <p>Bu sayfaya erişemezsiniz.</p>
                                <form class="mt-5 mb-5">
                                    <div class="text-center mb-4 mt-4">
                                        <a href="/Admin/AdminDashboard/Index" class="btn btn-primary">Admin panele geri dön</a>
                                        <a href="/Default/Index" class="btn btn-primary">Siteye dön</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/adminweb/plugins/common/common.min.js"></script>
    <script src="~/adminweb/js/custom.min.js"></script>
    <script src="~/adminweb/js/settings.js"></script>
    <script src="~/adminweb/js/gleek.js"></script>
    <script src="~/adminweb/js/styleSwitcher.js"></script>
</body>
</html>
