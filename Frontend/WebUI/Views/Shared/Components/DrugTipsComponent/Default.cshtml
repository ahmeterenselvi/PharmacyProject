@model IEnumerable<DrugTipResultDto>

@{
    Layout = null;
}

<section class="treatment_section layout_padding">
    <div class="side_img">
        <img src="~/mico-html/images/treatment-side-img.jpg" alt="">
    </div>
    <div class="container">
        <div class="heading_container heading_center">
            <h2>İlaçlar Hakkında Dikkat Etmeniz Gerekenler</h2>
        </div>
        <div class="row">
            @foreach (var drugTip in Model)
            {
                <div class="col-md-6 col-lg-3">
                    <div class="box ">
                        <div class="img-box">
                            <img src="@drugTip.Image" alt="">
                        </div>
                        <div class="detail-box">
                            <h4>@drugTip.Title</h4>
                            <p>@drugTip.Description</p>
                            <a href="">Read More</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
