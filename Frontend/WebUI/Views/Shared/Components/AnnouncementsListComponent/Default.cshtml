@model IEnumerable<AnnouncementResultDto>
@{
    Layout = null;

    var latestAnnouncement = Model.OrderByDescending(a => a.Date).FirstOrDefault();
    var announcements = Model.OrderByDescending(d => d.Date);
}

<style>
    .carousel-item {
        height: 500px;
        background-size: cover;
        background-position: center;
    }

    .detail-box {
        padding: 40px;
        background-color: rgba(255, 255, 255, 0.9);
        border-radius: 15px;
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
    }

    .play_btn button {
        background-color: #fff;
        border: none;
        padding: 15px;
        border-radius: 50%;
        box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

        .play_btn button:hover {
            transform: scale(1.1);
        }

    .announcement-info h1 {
        color: #333;
        font-size: 32px;
        font-weight: bold;
        margin-bottom: 15px;
    }

    .announcement-info p {
        color: #666;
        font-size: 18px;
        line-height: 1.6;
        margin-bottom: 20px;
    }

    .detail-link {
        background-color: #007bff;
        color: #fff;
        padding: 15px 30px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: bold;
        transition: background-color 0.3s ease;
        display: inline-block;
    }

        .detail-link:hover {
            background-color: #0056b3;
        }
</style>

<section class="slider_section">
    <div id="customCarousel1" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @foreach (var announcement in announcements)
            {
                <div class="carousel-item @(announcement == latestAnnouncement ? "active" : "")" style="background-image: url('@announcement.Image')">
                    <div class="container">
                        <div class="row align-items-center">
                            <div class="col-md-6">
                                <div class="detail-box">
                                    <div class="play_btn">
                                        <button>
                                            <i class="fa fa-play" aria-hidden="true"></i>
                                        </button>
                                    </div>
                                    <div class="announcement-info">
                                        <h1>@announcement.Title</h1>
                                        <p>@announcement.Summary</p>
                                        <a href="#" class="detail-link">Detaylar</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="carousel_btn-box">
            <a class="carousel-control-prev" href="#customCarousel1" role="button" data-slide="prev">
                <img src="~/mico-html/images/prev.png" alt="">
                <span class="sr-only">Önceki</span>
            </a>
            <a class="carousel-control-next" href="#customCarousel1" role="button" data-slide="next">
                <img src="~/mico-html/images/next.png" alt="">
                <span class="sr-only">Sonraki</span>
            </a>
        </div>
    </div>
</section>

